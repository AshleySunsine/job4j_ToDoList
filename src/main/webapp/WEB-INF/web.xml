<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>ListDone</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.IndexServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListDone</servlet-name>
    <url-pattern>/listdone.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ClickDone</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.ClickDoneServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClickDone</servlet-name>
    <url-pattern>/clickdone.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SaveTicket</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.SaveTicketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveTicket</servlet-name>
    <url-pattern>/saveticket.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteTicket</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.DeleteTicketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteTicket</servlet-name>
    <url-pattern>/deleteticket.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegistryServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.RegistryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistryServlet</servlet-name>
    <url-pattern>/registry.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.todolist.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>GetUserServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.GetUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetUserServlet</servlet-name>
    <url-pattern>/getuser.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>

</web-app>
